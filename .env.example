# ===========================================
# MULTI-APPS DEPLOYMENT CONFIGURATION
# ===========================================
STACK_NAME=multi

# ===========================================
# HOST CONFIGURATION
# ===========================================
# HOST_IP=192.168.1.9
HOST_IP=127.0.0.1

# ===========================================
# APPLICATION PORTS
# ===========================================
SIIMUT_PORT=8088
IAM_PORT=7000

# ===========================================
# DOCKER REGISTRY
# ===========================================
REGISTRY=juniyasyos
VERSION=latest

# ===========================================
# DATABASE CONFIGURATION (MariaDB)
# ===========================================
DB_PORT=3306
MYSQL_ROOT_PASSWORD=secret
MYSQL_DATABASE=siimut
MYSQL_USER=siimut
MYSQL_PASSWORD=secret

# ===========================================
# ADDITIONAL PORTS
# ===========================================
WEB_HTTP_PORT=8080
PMA_PORT=8081
REDIS_PORT=6379
VITE_PORT=5173
MAIL_WEB_PORT=8025
MAIL_SMTP_PORT=1025

# ===========================================
# APPLICATION SETTINGS
# ===========================================
USE_SSO=true
IAM_ENABLED=true
APP_ENV=production
APP_DEBUG=false
