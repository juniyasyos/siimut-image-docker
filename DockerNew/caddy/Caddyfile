{
    auto_https off
    admin off
}

# =========================
# SIIMUT — :8000
# =========================
:8000 {
    root * /var/www/siimut/public

    header {
        X-Content-Type-Options "nosniff"
        X-Frame-Options "SAMEORIGIN"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
        -Server
    }

    encode gzip

    @health path /health
    handle @health {
        respond "OK" 200
    }

    # Handle static assets dengan MIME type yang benar
    @static {
        path /build/*
        path /assets/*
        path *.css
        path *.js
        path *.jpg *.jpeg *.png *.gif *.svg *.webp
        path *.woff *.woff2 *.ttf *.eot
    }
    handle @static {
        header Cache-Control "public, max-age=31536000, immutable"
        @css path *.css
        handle @css {
            header Content-Type text/css
            file_server
        }
        @js path *.js
        handle @js {
            header Content-Type application/javascript
            file_server
        }
        file_server
    }

    php_fastcgi siimut-app:9000
    file_server

    log {
        output file /var/log/caddy/access_siimut.log {
            roll_size 100MB
            roll_keep 10
            roll_keep_for 720h
        }
        format json
    }
}

