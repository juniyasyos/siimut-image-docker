[mysqld]
# Character Set and Collation - Production Standards
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci
init_connect = 'SET NAMES utf8mb4'

# Performance Tuning for Production
# Memory Settings (adjust based on available RAM)
innodb_buffer_pool_size = 256M           # 70-80% of available RAM for DB
key_buffer_size = 32M                    # For MyISAM tables
query_cache_size = 64M                   # Query result caching
query_cache_limit = 2M
sort_buffer_size = 2M
read_buffer_size = 1M
read_rnd_buffer_size = 2M
join_buffer_size = 2M
tmp_table_size = 64M
max_heap_table_size = 64M

# Connection Settings - Production Optimized
max_connections = 100                     # Increased for production load
max_connect_errors = 100000
connect_timeout = 10
wait_timeout = 28800
interactive_timeout = 28800

# Table Settings
table_open_cache = 512                   # Cache for table definitions
table_definition_cache = 512
thread_cache_size = 8
thread_stack = 256K

# InnoDB Settings - Production Optimized
innodb_file_per_table = 1
innodb_flush_method = O_DIRECT
innodb_log_file_size = 64M
innodb_log_buffer_size = 16M
innodb_flush_log_at_trx_commit = 2       # Performance vs durability balance
innodb_lock_wait_timeout = 50
innodb_io_capacity = 200
innodb_read_io_threads = 4
innodb_write_io_threads = 4
innodb_open_files = 300

# Binary Logging for Backup and Replication
log-bin = mysql-bin
binlog_format = ROW
expire_logs_days = 7
max_binlog_size = 100M
sync_binlog = 1

# Error Logging
log-error = /var/log/mysql/mysql-error.log
log_warnings = 2

# Slow Query Logging - Production Monitoring
slow_query_log = 1
slow_query_log_file = /var/log/mysql/mysql-slow.log
long_query_time = 2.0                    # Stricter for production
log_queries_not_using_indexes = 1
min_examined_row_limit = 1000

# General Query Log (disable in production for performance)
general_log = 0
# general_log_file = /var/log/mysql/mysql-general.log

# Security Settings
local_infile = 0                         # Disable LOAD DATA INFILE
skip_show_database                       # Hide database names from unauthorized users

# Authentication
default_authentication_plugin = mysql_native_password

# Performance Schema (for monitoring)
performance_schema = ON
performance_schema_max_table_instances = 400
performance_schema_max_table_handles = 4000

# Query Cache Settings
query_cache_type = 1
query_cache_min_res_unit = 4096

# MyISAM Settings (if using MyISAM tables)
myisam_sort_buffer_size = 8M
myisam_max_sort_file_size = 1G
myisam_repair_threads = 1

# Network Settings
max_allowed_packet = 64M
net_buffer_length = 32K
net_read_timeout = 30
net_write_timeout = 30

# Temp Table Settings
max_tmp_tables = 32

[mysql]
default-character-set = utf8mb4
auto-rehash = FALSE                      # Disable auto-completion for security

[client]
default-character-set = utf8mb4
port = 3306
socket = /var/run/mysqld/mysqld.sock

[mysqldump]
quick
quote-names
max_allowed_packet = 64M
default-character-set = utf8mb4

[isamchk]
key_buffer_size = 20M
sort_buffer_size = 20M
read_buffer = 2M
write_buffer = 2M

[mysqlhotcopy]
interactive-timeout