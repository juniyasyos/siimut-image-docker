# ===========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ===========================================
# ⚠️  IMPORTANT: Change all default passwords and secrets before production deployment!

# Project Configuration
STACK_NAME=siimut
APP_DIR=si-imut

# Database Configuration - Production
DB_PORT=3306
# ⚠️  CHANGE THESE PASSWORDS FOR PRODUCTION!
MYSQL_ROOT_PASSWORD=your-super-strong-root-password-here
MYSQL_DATABASE=siimut_production
MYSQL_USER=siimut_prod
MYSQL_PASSWORD=your-super-strong-db-password-here
MYSQL_RANDOM_ROOT_PASSWORD=no

# Web Server Configuration  
WEB_HTTP_PORT=8080
PMA_PORT=8081
REDIS_PORT=6379

# PHP Configuration - Production Optimized
PHP_OPCACHE_VALIDATE_TIMESTAMPS=0
COMPOSER_CACHE_DIR=/tmp/composer
PHP_MEMORY_LIMIT=512M

# User/Group IDs (adjust to match host system)
UID=1000
GID=1000

# Build Configuration
APP_ENV=production
ENABLE_XDEBUG=false
RUN_MIGRATIONS=false

# Laravel Application Environment - Production
APP_NAME="SIIMUT Production"
APP_ENV=production
APP_KEY=base64:CHANGE-THIS-TO-YOUR-ACTUAL-LARAVEL-APP-KEY
APP_DEBUG=false
APP_URL=https://your-production-domain.com

# Database Connection
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=siimut_production
DB_USERNAME=siimut_prod
DB_PASSWORD=your-super-strong-db-password-here

# Redis Configuration
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0

# Cache & Queue Configuration - Production Optimized
CACHE_DRIVER=redis
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Broadcasting
BROADCAST_DRIVER=log

# Mail Configuration (adjust for your mail service)
MAIL_MAILER=smtp
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME="${APP_NAME}"

# Filesystem
FILESYSTEM_DISK=local

# Logging - Production
LOG_CHANNEL=stack
LOG_STACK=single,slack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning

# Security - Production
SESSION_SECURE_COOKIE=true
SESSION_HTTPONLY=true
SESSION_SAME_SITE=strict

# Additional Security Headers
FORCE_HTTPS=true
HSTS_PRELOAD=true

# phpMyAdmin Security
PMA_BLOWFISH_SECRET=your-super-strong-phpmyadmin-secret-32-chars

# Backup Configuration (if using backup package)
BACKUP_ARCHIVE_PASSWORD=your-backup-encryption-password

# Monitoring (if using monitoring services)
# SENTRY_LARAVEL_DSN=https://your-sentry-dsn
# NEW_RELIC_LICENSE_KEY=your-newrelic-key

# Social Login (if using OAuth)
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret
# FACEBOOK_CLIENT_ID=your-facebook-client-id
# FACEBOOK_CLIENT_SECRET=your-facebook-client-secret

# ===================================================
# PRODUCTION DEPLOYMENT CHECKLIST:
# ===================================================
# □ Change all passwords and secrets above
# □ Generate new APP_KEY: php artisan key:generate
# □ Update APP_URL to your actual domain
# □ Configure mail settings
# □ Set up SSL certificates
# □ Configure backup strategy
# □ Set up monitoring and logging
# □ Test all functionality in staging first
# ===================================================